
<div class="box box-danger">
    <div class="box-header">
        <i class="fa fa-warning"></i>
        <h3 class="box-title">$label</h3>
    </div><!-- /.box-header -->
    <div class="box-body">

        <div class="box-group" id="accordion-$id">
            #foreach($c in $children)
                <div class="panel box box-primary">
                    <div class="box-header">
                        <h4 class="box-title">
                            <a data-toggle="collapse" data-parent="#accordion-$id" href="#collapse-$c.id()">
                                $c.label()
                            </a>
                        </h4>
                        <button class="btn btn-default" style="margin:5px">Delete</button>
                    </div>
                    <div id="collapse-$c.id()" class="panel-collapse collapse">
                        <div class="box-body">
                            $c.renderMinimal("$path")
                        </div>
                    </div>

                </div>
            #end

            <button class="btn btn-default" style="margin:5px">Add</button>
        </div>


    </div><!-- /.box-body -->
</div><!-- /.box -->
